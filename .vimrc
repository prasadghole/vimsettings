set nocompatible
if has("gui_running")
	colorscheme dracula 
endif

syntax on
set nowrap
set tabstop=4
set showmatch
set smartcase
set incsearch
set ignorecase
set guifont=Source_Code_Pro:h12:cANSI:qDRAFT
set nu
set rnu
set foldmethod=syntax
set history=1000
set undolevels=1000
set title
set noswapfile
set nobackup
nnoremap ; :
